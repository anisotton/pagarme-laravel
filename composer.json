{
    "name": "anisotton/pagarme-laravel",
    "description": "A Laravel package to integrate with Pagar.me API",
    "keywords": [
        "laravel",
        "pagarme",
        "payment",
        "api"
    ],
    "homepage": "https://github.com/anisotton/pagarme-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Anderson Isotton",
            "email": "anderson@isotton.com.br",
            "homepage": "https://github.com/anisotton/"
        }
    ],
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-package-tools": "^1.16.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Keepcloud\\Pagarme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keepcloud\\Pagarme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Keepcloud\\Pagarme\\PagarmeServiceProvider"
            ],
            "aliases": {
                "Pagarme": "Keepcloud\\Pagarme\\Facades\\Pagarme"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
